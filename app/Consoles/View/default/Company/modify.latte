{layout '../Public/sideForm.latte'}
{block title}团队/企业信息{/block}
{*申请企业认证*}
{block private_js}
    <script>
        init.ready(function () {
            addressInit("province", "city", "area",{$auth->getProvince()},{$auth->getCity()},{$auth->getArea()})
        })
    </script>
{/block}

{block content}
    <form id="formArticle" class="stdform mform" method="post" action="" onsubmit="return false">
        <table cellpadding="0" cellspacing="0" border="0" id="frmtable" class="formtable">
            <thead>
            <tr>
                <td colspan="2">
                    <div class="split-line">基础信息</div>
                </td>
            </tr>
            <tr>
                <td><label>企业名称</label></td>
                <td>
                    <div class="control-group ">
                        <div class="field input-group">
                            <input type="text" id="frm_names" class="smallinput" name="names" value="{$auth->getNames()}"/>
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td><label>企业法人</label></td>
                <td>
                    <div class="control-group ">
                        <div class="field input-group">
                            <input type="text" id="frm_legal" class="smallinput" name="legal" value="{$auth->getLegal()}">
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td><label>行业</label></td>
                <td>
                    <div class="control-group ">
                        <div class="field input-group">
                            <select id="industry" name="industry">
                                {$industry|noescape}
                            </select>
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td><label>企业规模</label></td>
                <td>
                    <div class="field control-group">
                        <div class="input-group">
                            <select name="scales">
                                <option value="0">==企业规模==</option>
                                {foreach $scales as $scale=>$scalesMemo}
                                    <option value="{$scale}" {if $auth->getScales()==$scale}selected{/if}>{$scalesMemo}</option>
                                {/foreach}
                            </select>
                        </div>
                    </div>
                </td>
            </tr>

