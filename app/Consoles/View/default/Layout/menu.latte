<style>
    #contentdiv{
        left:180px;
    }

    #contentloding{
        left:180px;
    }

    #contentdiv.contentdiv-2, #contentloding.contentloding-2{
        left:50px;
    }

    .index-header-2 .logo{
        width:50px;
    }

    .index-header-2 .menu-open-close{
        height:50px;
        text-align:left;
        line-height:50px;
        position:absolute;
        left:50px;
        z-index:1;
        top:0;
        background:#f2f2f2;
        padding:0 10px;
    }

    .index-header-2 .menu-open-close span{
        font-size:20px;
        color:#666;
    }

    .index-header-2 .logo .al-icon-workless{
        width:50px;
        display:none !important;
    }

    .index-header-2 .logo .al-icon-qidongtubiao1{
        width:50px;
