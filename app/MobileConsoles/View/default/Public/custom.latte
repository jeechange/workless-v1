<div class="popup task-group-popup">
    <header class="bar bar-nav">
        <a class="button button-link button-nav pull-left open-create-group">
            新建项目
        </a>
        <a class="button button-link button-nav pull-right close-popup">
            关闭
        </a>
        <h1 class="title">选择任务项目</h1>
    </header>
    <div class="bar bar-standard bar-footer list-group-block" style="background: #5CABFB;">
        <div class="select-group-confirm" style="text-align: center;height:2.2rem;line-height: 2.2rem;color:#fff;font-size:1.1rem;letter-spacing:0.3rem">确定</div>
    </div>
    <div class="content">
        <div class="content-inner">
            <div class="list-block form-group-create" style="display: none;">
                <ul>
                    <!-- Text inputs -->
                    <li>
                        <div class="item-content">
                            <div class="item-inner">
                                <div class="item-title label">项目名称</div>
                                <div class="item-input">
                                    <input type="text" name="group_name" placeholder="项目名称">
                                </div>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="item-content">
                            <div class="item-inner">
                                <div class="item-title label">创建日期</div>
                                <div class="item-input">
                                    <input type="text" name="group_addTime" id='addTime' placeholder="选择日期">
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="align-top">
                        <div class="item-content">
                            <div class="item-inner">
                                <div class="item-title label">说明</div>
                                <div class="item-input">
                                    <textarea name="group_memo" placeholder="说明"></textarea>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
                <div class="content-block">
                    <div class="row">
                        <div class="col-50">
                            <a href="#" class="button button-big button-fill button-danger cancel-create-group">取消</a>
                        </div>
                        <div class="col-50">
                            <a href="#" data-url="{url("mobileConsoles_task_group_add")}" class="button button-big button-fill button-success submit-create-group">提交</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="content-block list-group-block" style="margin:.75rem 0">
                <div class="searchbar row">
                    <div class="search-input col-80">
                        <label class="icon icon-search" for="search"></label>
                        <input type="search" id='search' placeholder='输入关键字...'/>
                    </div>
                    <a class="button button-fill button-primary col-20">搜索</a>
                </div>

                <div class="list-block media-list">
                    <ul id="group-lists">
                        {foreach $groups as $group}
                            {include '../Task/groupListsItem.latte', group=>$group}
                        {/foreach}
                    </ul>
                </div>
            </div>


        </div>
    </div>
</div>

