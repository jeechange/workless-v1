            <div class="col-95" style="width:90%;margin:auto;">
                <div class="button button-big button-fill" id="bnts" style="background-color:#FF9800;height:48px;line-height:48px;border-radius:50px;">复制链接</div>
            </div>
        </div>
    </a>
    <a class="dynamic-receive" href="{$gobackUrl}">
        <div class="content-block" style="width:100%;font-size:14px;">
            <div class="col-95">
                <div class="button button-big button-fill" id="bnts" style="height:48px;line-height:48px;color:#333;background: #fff;">返回</div>
            </div>
        </div>
    </a>
{/block}